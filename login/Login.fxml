<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="900" style="-fx-background-color: linear-gradient(to bottom right, #FFEBB9, #FFD89E);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dulce_tentacion.controllers.LoginController">

    <HBox spacing="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- PANEL IZQUIERDO - GRADIENTE DORADO INTENSO -->
        <VBox alignment="CENTER" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom, #FFB347, #FF8C00);
                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 25, 0, 0, 10);">

            <ImageView fx:id="imgLogo" fitHeight="200.0" fitWidth="236.0" preserveRatio="true"
                       style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 20, 0, 0, 8);">
                <image>
                    <Image url="@logo_oficial.png" />
                </image>
            </ImageView>

            <!-- TÍTULO CON TAMAÑO MÁS PEQUEÑO -->
            <Label style="-fx-font-family: 'Lucida Calligraphy', 'Monotype Corsiva', 'Brush Script MT', cursive;
                          -fx-font-size: 44px;
                          -fx-text-fill: #FFF8DC;
                          -fx-font-weight: bold;
                          -fx-effect: dropshadow(three-pass-box, rgba(139,69,19,0.5), 6, 0, 0, 3);
                          -fx-padding: 20 0 0 0;"
                   text="Dulce Tentación">
                <font>
                    <Font name="Monotype Corsiva" size="44" />
                </font>
            </Label>

            <Label style="-fx-font-family: 'Georgia', serif;
                          -fx-font-size: 18px;
                          -fx-text-fill: #FFEFD5;
                          -fx-font-weight: bold;
                          -fx-font-style: italic;
                          -fx-effect: dropshadow(three-pass-box, rgba(139,69,19,0.3), 3, 0, 0, 1);
                          -fx-padding: 12 0 0 0;"
                   text="Hecho con amor, horneado para ti." />
        </VBox>

        <!-- PANEL DERECHO - AMARILLO VIBRANTE -->
        <VBox alignment="CENTER" spacing="35" style="-fx-background-color: linear-gradient(to bottom, #FFFACD, #FFE4B5);
                      -fx-padding: 55;
                      -fx-effect: dropshadow(three-pass-box, rgba(255,140,0,0.2), 15, 0, 0, 5);"
              HBox.hgrow="ALWAYS">

            <Label style="-fx-font-family: 'Segoe UI', sans-serif;
                          -fx-font-size: 38px;
                          -fx-text-fill: #FF8C00;
                          -fx-font-weight: bold;
                          -fx-effect: dropshadow(three-pass-box, rgba(139,69,19,0.3), 4, 0, 0, 2);
                          -fx-padding: 0 0 30 0;"
                   text="Iniciar Sesión" />

            <!-- CAMPOS -->
            <VBox alignment="CENTER_LEFT" prefWidth="360" spacing="30">

                <!-- USUARIO -->
                <VBox spacing="12">
                    <Label style="-fx-font-family: 'Segoe UI', sans-serif;
                                  -fx-font-size: 18px;
                                  -fx-text-fill: #D2691E;
                                  -fx-font-weight: bold;
                                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);"
                           text="Usuario" />
                    <TextField fx:id="txtUsuario" prefHeight="50" prefWidth="360"
                               promptText="Ingresa tu usuario"
                               style="-fx-font-size: 15px;
                                      -fx-background-radius: 15;
                                      -fx-border-radius: 15;
                                      -fx-border-color: #FFA500;
                                      -fx-border-width: 2.5;
                                      -fx-background-color: #FFF8DC;
                                      -fx-text-fill: #8B4513;
                                      -fx-prompt-text-fill: #CD853F;
                                      -fx-effect: innershadow(three-pass-box, rgba(255,165,0,0.3), 8, 0, 0, 3);
                                      -fx-font-weight: bold;" />
                </VBox>

                <!-- CONTRASEÑA -->
                <VBox spacing="12">
                    <Label style="-fx-font-family: 'Segoe UI', sans-serif;
                                  -fx-font-size: 18px;
                                  -fx-text-fill: #D2691E;
                                  -fx-font-weight: bold;
                                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);"
                           text="Contraseña" />
                    <PasswordField fx:id="txtPassword" prefHeight="50" prefWidth="360"
                                   promptText="Ingresa tu contraseña"
                                   style="-fx-font-size: 15px;
                                          -fx-background-radius: 15;
                                          -fx-border-radius: 15;
                                          -fx-border-color: #FFA500;
                                          -fx-border-width: 2.5;
                                          -fx-background-color: #FFF8DC;
                                          -fx-text-fill: #8B4513;
                                          -fx-prompt-text-fill: #CD853F;
                                          -fx-effect: innershadow(three-pass-box, rgba(255,165,0,0.3), 8, 0, 0, 3);
                                          -fx-font-weight: bold;" />
                </VBox>
            </VBox>

            <!-- BOTONES - MÁS LLAMATIVOS -->
            <HBox alignment="CENTER" spacing="30">
                <Button fx:id="btnAceptar" prefHeight="50" prefWidth="140"
                        style="-fx-font-family: 'Segoe UI', sans-serif;
                               -fx-font-size: 18px;
                               -fx-font-weight: bold;
                               -fx-background-color: linear-gradient(to bottom, #FF8C00, #FF6347);
                               -fx-text-fill: #FFF8DC;
                               -fx-background-radius: 15;
                               -fx-border-radius: 15;
                               -fx-border-color: #FF4500;
                               -fx-border-width: 2;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(three-pass-box, rgba(255,69,0,0.5), 10, 0, 0, 5);"
                        text="Aceptar" />

                <Button fx:id="btnCancelar" prefHeight="50" prefWidth="140"
                        style="-fx-font-family: 'Segoe UI', sans-serif;
                               -fx-font-size: 18px;
                               -fx-font-weight: bold;
                               -fx-background-color: linear-gradient(to bottom, #FFD700, #FFA500);
                               -fx-text-fill: #8B4513;
                               -fx-background-radius: 15;
                               -fx-border-radius: 15;
                               -fx-border-color: #FF8C00;
                               -fx-border-width: 2;
                               -fx-cursor: hand;
                               -fx-effect: dropshadow(three-pass-box, rgba(255,215,0,0.5), 10, 0, 0, 5);"
                        text="Cancelar" />
            </HBox>

            <!-- MENSAJE - MÁS DESTACADO -->
            <VBox fx:id="boxMensaje" alignment="CENTER" prefWidth="360"
                  style="-fx-background-color: linear-gradient(to bottom, #FFFACD, #FFE4B5);
                         -fx-border-color: #FF8C00;
                         -fx-border-width: 2.5;
                         -fx-border-radius: 12;
                         -fx-background-radius: 12;
                         -fx-padding: 15;
                         -fx-effect: dropshadow(three-pass-box, rgba(255,140,0,0.4), 8, 0, 0, 3);"
                  visible="false">
                <Label fx:id="lblMensaje"
                       style="-fx-font-family: 'Segoe UI', sans-serif;
                              -fx-font-size: 15px;
                              -fx-font-weight: bold;
                              -fx-text-fill: #FF4500;
                              -fx-text-alignment: center;
                              -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 2, 0, 0, 1);"
                       wrapText="true" />
            </VBox>
        </VBox>
    </HBox>
</AnchorPane>