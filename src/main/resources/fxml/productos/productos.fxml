<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gestion_panaderia.controller.ProductosController"
            prefWidth="1200" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #fff6cc, #ffe6a1);">

    <!-- MENÚ LATERAL (se mantiene igual) -->
    <left>
        <VBox prefWidth="220" spacing="15"
              style="-fx-background-color: linear-gradient(to bottom, #ffb347, #ffcc33); -fx-padding: 20; -fx-alignment: TOP_CENTER;">

            <Label text=" DULCE TENTACION"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.5), 2,0,0,1);"/>

            <Separator prefWidth="180" style="-fx-background-color: #5c4033;"/>

            <Button fx:id="btnVentas" text=" Ventas" prefWidth="180" prefHeight="40"
                    onAction="#abrirVentas"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnPedidos" text=" Pedidos" prefWidth="180" prefHeight="40"
                    onAction="#abrirPedidos"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnProductos" text=" Productos" prefWidth="180" prefHeight="40"
                    onAction="#abrirProductos"
                    style="-fx-background-color: #ffb84d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, #cc6600, 6, 0.3, 0, 1);"/>

            <Button fx:id="btnInventario" text=" Inventario" prefWidth="180" prefHeight="40"
                    onAction="#abrirInventario"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnClientes" text=" Clientes" prefWidth="180" prefHeight="40"
                    onAction="#abrirClientes"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnRecibos" text=" Recibos" prefWidth="180" prefHeight="40"
                    onAction="#abrirRecibos"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnReportes" text=" Reportes" prefWidth="180" prefHeight="40"
                    onAction="#abrirReportes"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Separator prefWidth="180" style="-fx-background-color: #5c4033;"/>

            <VBox spacing="6" style="-fx-background-color: #fff2cc; -fx-background-radius: 10; -fx-padding: 10;">
                <Label text="Usuario actual"
                       style="-fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                <Label fx:id="usuarioActual" text="Administrador"
                       style="-fx-text-fill: #5c4033; -fx-font-size: 12px;"/>
            </VBox>
        </VBox>
    </left>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <AnchorPane style="-fx-padding: 20;">
            <VBox spacing="20" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <!-- ENCABEZADO -->
                <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="70"
                      style="-fx-background-color: linear-gradient(to right, #ffb84d, #ffcc33); -fx-padding: 10; -fx-background-radius: 10;">
                    <Label text="Gestión de Productos - Dulce Tentacion"
                           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                </HBox>

                <!-- BÚSQUEDA Y FILTROS -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label text="Buscar:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                        <TextField fx:id="txtBuscarProducto" promptText="Nombre o código" prefWidth="200"
                                   style="-fx-background-radius: 10; -fx-border-color: #ffcc33; -fx-border-radius: 10;"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Categoria:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                        <ComboBox fx:id="cmbCategoriaProducto" promptText="Todas" prefWidth="150"
                                  style="-fx-background-radius: 10;"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Estado Stock:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                        <ComboBox fx:id="cmbEstadoStockProducto" promptText="Todos" prefWidth="150"
                                  style="-fx-background-radius: 10;"/>
                    </VBox>
                    <VBox alignment="BOTTOM_CENTER">
                        <Button fx:id="btnBuscarProducto" text="Buscar" prefWidth="100"
                                onAction="#buscarProducto"
                                style="-fx-background-color: linear-gradient(to bottom, #ff8c00, #ffb84d); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
                    </VBox>
                    <VBox alignment="BOTTOM_CENTER">
                        <Button fx:id="btnLimpiarFiltros" text="Limpiar" prefWidth="100"
                                onAction="#limpiarFiltros"
                                style="-fx-background-color: linear-gradient(to bottom, #6c757d, #868e96); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
                    </VBox>
                </HBox>

                <!-- ESTADÍSTICAS RÁPIDAS -->
                <HBox spacing="20" alignment="CENTER">
                    <VBox spacing="5" alignment="CENTER" prefWidth="140"
                          style="-fx-background-color: #fff2cc; -fx-background-radius: 10; -fx-padding: 12; -fx-border-color: #28a745; -fx-border-width: 2; -fx-border-radius: 10;">
                        <Label text="Galletas" style="-fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-font-size: 12px;"/>
                        <Label fx:id="lblTotalGalletas" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                    </VBox>
                    <VBox spacing="5" alignment="CENTER" prefWidth="140"
                          style="-fx-background-color: #fff2cc; -fx-background-radius: 10; -fx-padding: 12; -fx-border-color: #e83e8c; -fx-border-width: 2; -fx-border-radius: 10;">
                        <Label text="Pasteles" style="-fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-font-size: 12px;"/>
                        <Label fx:id="lblTotalPasteles" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e83e8c;"/>
                    </VBox>
                    <VBox spacing="5" alignment="CENTER" prefWidth="140"
                          style="-fx-background-color: #fff2cc; -fx-background-radius: 10; -fx-padding: 12; -fx-border-color: #fd7e14; -fx-border-width: 2; -fx-border-radius: 10;">
                        <Label text="Panes" style="-fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-font-size: 12px;"/>
                        <Label fx:id="lblTotalPanes" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #fd7e14;"/>
                    </VBox>
                    <VBox spacing="5" alignment="CENTER" prefWidth="140"
                          style="-fx-background-color: #fff2cc; -fx-background-radius: 10; -fx-padding: 12; -fx-border-color: #17a2b8; -fx-border-width: 2; -fx-border-radius: 10;">
                        <Label text="Total" style="-fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-font-size: 12px;"/>
                        <Label fx:id="lblTotalProductos" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #17a2b8;"/>
                    </VBox>
                </HBox>

                <!-- TABLA DE PRODUCTOS -->
                <TableView fx:id="tableProductos" VBox.vgrow="ALWAYS"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffcc33;">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="colCodigo" text="Codigo" prefWidth="100"/>
                        <TableColumn fx:id="colNombre" text="Producto" prefWidth="250"/>
                        <TableColumn fx:id="colCategoria" text="Categoria" prefWidth="120"/>
                        <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100"/>
                        <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                    </columns>
                </TableView>

                <!-- BOTONES DE ACCIÓN -->
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="btnAgregarProducto" text="Agregar"
                            onAction="#agregarProducto"
                            style="-fx-background-color: linear-gradient(to bottom, #28a745, #5cb85c); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120;"/>

                    <Button fx:id="btnEditarProducto" text="Editar"
                            onAction="#editarProducto"
                            style="-fx-background-color: linear-gradient(to bottom, #17a2b8, #5bc0de); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120;"/>

                    <Button fx:id="btnEliminarProducto" text="Eliminar"
                            onAction="#eliminarProducto"
                            style="-fx-background-color: linear-gradient(to bottom, #dc3545, #c82333); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120;"/>

                    <Button fx:id="btnActualizarStock" text="Actualizar Stock"
                            onAction="#actualizarStock"
                            style="-fx-background-color: linear-gradient(to bottom, #ff8c00, #ffb84d); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 140; -fx-effect: dropshadow(gaussian, #ffb347, 6, 0.3, 0, 1);"/>

                    <Button fx:id="btnExportarProductos" text="Exportar"
                            onAction="#exportarProductos"
                            style="-fx-background-color: linear-gradient(to bottom, #6f42c1, #8b5cf6); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-pref-width: 120;"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </center>
</BorderPane>