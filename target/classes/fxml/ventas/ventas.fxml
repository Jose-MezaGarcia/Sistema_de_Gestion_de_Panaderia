<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gestion_panaderia.controller.VentaController"
            prefWidth="1000" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #fff6cc, #ffe6a1);">

    <!-- MENÚ LATERAL -->
    <left>
        <VBox prefWidth="220" spacing="15"
              style="-fx-background-color: linear-gradient(to bottom, #ffb347, #ffcc33); -fx-padding: 20; -fx-alignment: TOP_CENTER;">

            <Label text=" DULCE TENTACIÓN"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.5), 2,0,0,1);"/>

            <Separator prefWidth="180" style="-fx-background-color: #5c4033;"/>

            <Button fx:id="btnVentas" text=" Ventas" prefWidth="180" prefHeight="40"
                    onAction="#abrirVentas"
                    style="-fx-background-color: #ffb84d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, #cc6600, 6, 0.3, 0, 1);"/>

            <Button fx:id="btnPedidos" text=" Pedidos" prefWidth="180" prefHeight="40"
                    onAction="#abrirPedidos"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnProductos" text=" Productos" prefWidth="180" prefHeight="40"
                    onAction="#abrirProductos"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnInventario" text=" Inventario" prefWidth="180" prefHeight="40"
                    onAction="#abrirInventario"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnClientes" text=" Clientes" prefWidth="180" prefHeight="40"
                    onAction="#abrirClientes"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnRecibos" text=" Recibos" prefWidth="180" prefHeight="40"
                    onAction="#abrirRecibos"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Button fx:id="btnReportes" text=" Reportes" prefWidth="180" prefHeight="40"
                    onAction="#abrirReportes"
                    style="-fx-background-color: #fff2cc; -fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-background-radius: 12;"/>

            <Separator prefWidth="180" style="-fx-background-color: #5c4033;"/>

            <!-- Ficha del usuario activo -->
            <VBox spacing="6" style="-fx-background-color: #fff2cc; -fx-background-radius: 10; -fx-padding: 10;">
                <Label text="Usuario actual"
                       style="-fx-text-fill: #5c4033; -fx-font-weight: bold; -fx-font-size: 13px;"/>
                <Label fx:id="usuarioActual" text="Administrador"
                       style="-fx-text-fill: #5c4033; -fx-font-size: 12px;"/>
            </VBox>
        </VBox>
    </left>

    <!-- CONTENIDO PRINCIPAL -->
    <center>
        <AnchorPane style="-fx-padding: 20;">
            <VBox spacing="15">
                <!-- ENCABEZADO -->
                <HBox alignment="CENTER_LEFT" spacing="15" prefHeight="70"
                      style="-fx-background-color: linear-gradient(to right, #ffb84d, #ffcc33); -fx-padding: 10; -fx-background-radius: 10;">
                    <Label text="Ventas - Dulce Tentación"
                           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                </HBox>

                <!-- SECCIÓN DE CLIENTE -->
                <HBox spacing="20" alignment="CENTER_LEFT" prefHeight="80"
                      style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #ffcc33; -fx-border-radius: 10;">
                    <VBox spacing="8" prefWidth="300">
                        <Label text="Cliente:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-font-size: 14px;"/>
                        <ComboBox fx:id="cmbCliente" prefWidth="280" promptText="Seleccionar cliente..."
                                  style="-fx-background-radius: 8; -fx-border-color: #ffcc33; -fx-border-radius: 8;"/>
                    </VBox>

                    <Separator orientation="VERTICAL" prefHeight="60"/>

                    <VBox spacing="5" prefWidth="200">
                        <Label text="Calificación:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-font-size: 12px;"/>
                        <Label fx:id="lblCalificacionCliente" text="No seleccionado"
                               style="-fx-text-fill: #5c4033; -fx-font-size: 14px;"/>
                    </VBox>

                    <VBox spacing="5" prefWidth="200">
                        <Label text="Descuento:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-font-size: 12px;"/>
                        <Label fx:id="lblDescuentoCliente" text="0% de descuento"
                               style="-fx-text-fill: #5c4033; -fx-font-size: 14px;"/>
                    </VBox>
                </HBox>

                <!-- CAMPOS DE PRODUCTO -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label text="Código:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                        <TextField fx:id="txtCodigo" promptText="Ej. P001" prefWidth="100"
                                   style="-fx-background-radius: 10; -fx-border-color: #ffcc33; -fx-border-radius: 10;"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Producto:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                        <TextField fx:id="txtProducto" promptText="Nombre del producto" prefWidth="200"
                                   editable="false"
                                   style="-fx-background-radius: 10; -fx-border-color: #ffcc33; -fx-border-radius: 10; -fx-background-color: #f5f5f5;"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Precio:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                        <TextField fx:id="txtPrecio" promptText=" " prefWidth="100"
                                   editable="false"
                                   style="-fx-background-radius: 10; -fx-border-color: #ffcc33; -fx-border-radius: 10; -fx-background-color: #f5f5f5;"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Cantidad:" style="-fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                        <TextField fx:id="txtCantidad" promptText="1" prefWidth="80"
                                   style="-fx-background-radius: 10; -fx-border-color: #ffcc33; -fx-border-radius: 10;"/>
                    </VBox>
                    <VBox alignment="BOTTOM_CENTER" spacing="5">
                        <Label text=" " style="-fx-font-size: 1px;"/>
                        <Button fx:id="btnAgregar" text="Agregar" prefWidth="120" prefHeight="35"
                                style="-fx-background-color: linear-gradient(to bottom, #ff8c00, #ffb84d); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
                    </VBox>
                </HBox>

                <!-- TABLA DE DETALLES -->
                <TableView fx:id="tableView" prefHeight="220" prefWidth="720"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ffcc33;">
                    <columns>
                        <TableColumn fx:id="colCodigo" text="Código" prefWidth="100"
                                     style="-fx-background-color: #fff6cc;"/>
                        <TableColumn fx:id="colProducto" text="Producto" prefWidth="250"
                                     style="-fx-background-color: #fff6cc;"/>
                        <TableColumn fx:id="colPrecio" text="Precio Unit." prefWidth="120"
                                     style="-fx-background-color: #fff6cc;"/>
                        <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100"
                                     style="-fx-background-color: #fff6cc;"/>
                        <TableColumn fx:id="colSubtotal" text="Subtotal" prefWidth="150"
                                     style="-fx-background-color: #fff6cc;"/>
                    </columns>
                </TableView>

                <!-- TOTALES -->
                <VBox spacing="10" alignment="CENTER_RIGHT"
                      style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-border-color: #ffcc33; -fx-border-radius: 10;">

                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <Label text="Subtotal:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #5c4033;"/>
                        <TextField fx:id="txtSubtotal" prefWidth="140" editable="false" text=" "
                                   style="-fx-background-color: #fff5cc; -fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #5c4033; -fx-border-color: #ffcc33; -fx-border-radius: 8;"/>
                    </HBox>

                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <Label text="Descuento:" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #FF8C00;"/>
                        <TextField fx:id="txtDescuento" prefWidth="140" editable="false" text=" "
                                   style="-fx-background-color: #ffe6cc; -fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #FF8C00; -fx-border-color: #FF8C00; -fx-border-radius: 8;"/>
                    </HBox>

                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <Label text="TOTAL:" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2E8B57;"/>
                        <TextField fx:id="txtTotal" prefWidth="140" editable="false" text=" "
                                   style="-fx-background-color: #e6ffe6; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2E8B57; -fx-border-color: #2E8B57; -fx-border-radius: 8; -fx-border-width: 2;"/>
                    </HBox>
                </VBox>

                <!-- BOTONES DE ACCIÓN -->
                <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 5 0 0 0;">
                    <Button fx:id="btnGuardar" text="Guardar Venta" prefWidth="150" prefHeight="40"
                            style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #45a049); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, #2E7D32, 6, 0.3, 0, 1);"/>
                    <Button fx:id="btnCancelar" text="Cancelar" prefWidth="120" prefHeight="40"
                            style="-fx-background-color: linear-gradient(to bottom, #ff6b6b, #ee5a52); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 10;"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </center>
</BorderPane>